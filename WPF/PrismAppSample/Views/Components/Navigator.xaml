<UserControl x:Class="View.Components.Navigator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:View.Components"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="100">
    <StackPanel>
        <TextBlock Text="Navigation Area" HorizontalAlignment="Center" />
        <Button Content="Text View" Command="{Binding NavigatorCommand}" CommandParameter="TextView" />
        <Button Content="Picture View" Command="{Binding NavigatorCommand}" CommandParameter="PictureView" />
    </StackPanel>
</UserControl>