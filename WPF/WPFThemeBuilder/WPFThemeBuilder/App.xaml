<Application
    x:Class="WPFThemeBuilder.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:colors="clr-namespace:WPFThemeBuilder.Colors"
    xmlns:local="clr-namespace:WPFThemeBuilder"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Fonts/Fonts.xaml" />
                <colors:ColorKeys />
                <ResourceDictionary Source="./Style/ButtonStyles.xaml" />
                <ResourceDictionary Source="./Style/TextBlockStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>