<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.Views.Windows"
        x:Class="GUI.Views.Windows.MainWindowTypeA"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding TextData}" Grid.Row="0" />
        <TextBlock Text="{Binding LoadData}" Grid.Row="1" />
        <Button Content="Load Data" Command="{Binding LoadCommand}" Grid.Row="2" />
    </Grid>
</Window>